<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_order"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_order"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_oil_gun"
        android:text="2号油枪"
        android:layout_toRightOf="@id/iv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_oil_gun"
        android:id="@+id/tv_translation_id"
        android:text="0010050006"
        android:layout_toRightOf="@id/iv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_order"
        android:id="@+id/tv_order_time"
        android:layout_below="@id/tv_translation_id"
        android:text="2019年1月23日 16:17:05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:id="@+id/tv_order_money"
        android:text="￥55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="#888888"
        android:layout_below="@id/tv_order_time"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

</RelativeLayout>