<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/title_layout"></include>

    <LinearLayout
        android:layout_marginTop="@dimen/x120"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="@dimen/x45"
            android:layout_marginLeft="@dimen/x45"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35">
            <EditText
                android:inputType="numberPassword"
                android:id="@+id/et_old_password"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入旧密码"
                android:singleLine="true"
                android:text=""
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/x14" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="@dimen/x45"
            android:layout_marginLeft="@dimen/x45"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35">
            <EditText

                android:id="@+id/et_new_password"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:singleLine="true"
                android:text=""
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/x14" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="@dimen/x45"
            android:layout_marginLeft="@dimen/x45"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35">
            <EditText
                android:id="@+id/et_confirm_password"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="确认输入新密码"
                android:inputType="numberPassword"
                android:singleLine="true"
                android:text=""
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/x14" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:textSize="@dimen/x16"
        android:id="@+id/btn_confirm"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginLeft="@dimen/x45"
        android:textColor="#ffffff"
        android:text="确认修改"
        android:background="@drawable/button_select_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

</LinearLayout>