<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginRight="@dimen/x20"
    android:layout_marginLeft="@dimen/x20"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_coupon_title"
        android:layout_marginTop="@dimen/x10"
        android:textSize="@dimen/x17"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="优惠券名字"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_coupon_money"
        android:textSize="@dimen/x14"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x20"
        android:text="原始金额：5元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_youhui"
        android:textSize="@dimen/x14"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x20"
        android:text="优惠金额：5元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/x14"
            android:text="付款金额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/x14"
            android:id="@+id/tv_pay_money"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:layout_gravity="center"
            android:text="5元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            android:textSize="@dimen/x14"
            android:background="@drawable/linearlayout_border"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x35" />

        <Button
            android:id="@+id/btn_confirm"
            android:textSize="@dimen/x14"
            android:textColor="@color/white"
            android:background="@drawable/button_select_bg"
            android:layout_marginLeft="@dimen/x20"
            android:text="核销"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x35" />

    </LinearLayout>


</LinearLayout>